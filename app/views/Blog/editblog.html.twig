{% extends 'master.html.twig' %}
{% block title %} Edit an article {% endblock %}
{% block bodyclass %}edit-single-page{% endblock %}
{% block body %}
    {% include 'navbar.html.twig' %}
    <div class="container">
        <div class="row">
            {% for flash in app.session.getFlashBag.get('message') %}
                <div class="alert alert-{{ flash.type }} alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p>{{ flash.content }}</p>
                </div>
            {% endfor %}
        </div>
        <div class="page-header">
            <p>Edit</p>
        </div>
        {% form_theme form1 'bootstrap_3_horizontal_layout.html.twig' %}
        {% form_theme form2 'bootstrap_3_horizontal_layout.html.twig' %}
        {{ form(form1, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form(form2, {'attr': {'novalidate': 'novalidate'}}) }}
    </div>

{% endblock %}